<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="134dp" >

        <TextView
            android:id="@+id/apply_terminal_number"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#292929"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/apply_pos_number"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#292929"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/apply_pay_channel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#292929"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/apply_terminal_status"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#292929"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/terminal_button_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/terminal_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="64dp" >

                    <Button
                        android:id="@+id/apply_button_open"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/normal_button_selector"
                        android:text="申请开通"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/apply_button_video"
                        android:layout_width="118dp"
                        android:layout_height="40dp"
                        android:background="@drawable/normal_button_selector"
                        android:text="视频认证"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>