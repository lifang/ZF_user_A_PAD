<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/after_sale_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:singleLine="true"
                android:textColor="#292929"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/after_sale_terminal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#292929"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/after_sale_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#292929"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/after_sale_status"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#292929"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/after_sale_button_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/normal_width3"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/after_sale_button_left"
                            android:layout_width="@dimen/normai_button_width"
                            android:layout_height="@dimen/normai_button_height"
                            android:layout_marginBottom="@dimen/iconma"
                            android:background="@drawable/blank_button_selector"
                            android:textColor="@color/blank_button_selector"
                            android:textSize="@dimen/textmid"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/after_sale_button_right"
                            android:layout_width="@dimen/normai_button_width"
                            android:layout_height="@dimen/normai_button_height"
                            android:background="@drawable/normal_button_selector"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textmid"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/after_sale_button_center"
                            android:layout_width="@dimen/normai_button_width"
                            android:layout_height="@dimen/normai_button_height"
                            android:background="@drawable/normal_button_selector"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textmid"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/after_sale_button_center_blank"
                            android:layout_width="@dimen/normai_button_width"
                            android:layout_height="@dimen/normai_button_height"
                            android:background="@drawable/blank_button_selector"
                            android:textColor="@color/blank_button_selector"
                            android:textSize="@dimen/textmid"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DAD8D9" />

</LinearLayout>