<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<include 
    layout="@layout/title_back"></include>
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="42dp"
    android:paddingBottom="42dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:textSize="@dimen/textbig"
            android:textColor="#292929"
            android:text="手机号/邮箱" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_edittext"
>

        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/normai_button_width"
            android:layout_height="@dimen/normai_button_height"
            android:background="@drawable/normal_button_selector"
            android:textColor="#ffffff"
            android:text="获取验证码" />

    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:textSize="@dimen/textbig"
            android:textColor="#292929"
            android:text="输入 验证码" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_edittext"
>

        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/normai_button_width"
            android:layout_height="@dimen/normai_button_height"
            android:background="@drawable/normal_button_selector"
            android:textColor="#ffffff"
            android:text="检查" />

    </LinearLayout>
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:textSize="@dimen/textbig"
            android:textColor="#292929"
            android:text="输  入 密 码" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_edittext"
>

        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/normai_button_width"
            android:layout_height="@dimen/normai_button_height"
            android:background="@drawable/normal_button_selector"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:text="获取验证m码" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:textSize="@dimen/textbig"
            android:textColor="#292929"
            android:text="确  认 密 码" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_edittext"
>

        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/normai_button_width"
            android:layout_height="@dimen/normai_button_height"
            android:background="@drawable/normal_button_selector"
            android:textColor="#ffffff"
            android:visibility="invisible"
            android:text="获取验证m码" />

    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#E5E4E4"/>
    <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/normai_button_width"
            android:layout_height="@dimen/normai_button_height"
            android:background="@drawable/normal_button_selector"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="提交" />
</LinearLayout>
</ScrollView>


</LinearLayout>
