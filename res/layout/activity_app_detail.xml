<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:background="#E9E8E8"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:background="#E9E8E8"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/toPublic"
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/tab_bg"
                        android:gravity="center"
                        android:text="对公"
                        android:textColor="#292929"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/toPrivate"
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="对私"
                        android:textColor="#292929"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:paddingLeft="64dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_detail_brand"
                            android:textColor="#292929"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_detail_model"
                            android:textColor="#292929"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="终  端  号"
                            android:textColor="#292929"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_detail_channel"
                            android:textColor="#292929"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/apply_detail_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#292929"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/apply_detail_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#292929"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/apply_detail_serial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#292929"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/apply_detail_channel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#292929"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingBottom="30dp"
                    android:paddingRight="64dp" >

                    <TextView
                        android:id="@+id/apply_detail_key"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="可选择的常用商户"
                        android:textColor="#292929"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/mMerchantContainer_0"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/tv_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/apply_detail_value"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="2dp"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edadressbg" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="64dp" />

            <LinearLayout
                android:id="@+id/apply_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/mMerchantContainer_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="26dp"
                        android:layout_marginRight="11dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="64dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mMerchantContainer_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="26dp"
                        android:layout_marginLeft="11dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingRight="64dp" >
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/Divider"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="64dp" />

                <LinearLayout
                    android:id="@+id/apply_detail_customer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/mCustomerContainer_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="26dp"
                        android:layout_marginRight="11dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="64dp" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mCustomerContainer_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="26dp"
                        android:layout_marginLeft="11dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="64dp" >
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/Divider"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="64dp" />

                <com.example.zf_pad.util.ScrollViewWithGView
                    android:id="@+id/gridview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3"
                    android:paddingLeft="64dp"
                    android:paddingRight="64dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="30dp" >
                </com.example.zf_pad.util.ScrollViewWithGView>

                <com.example.zf_pad.util.ScrollViewWithGView
                    android:id="@+id/gridview_"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="2"
                    android:paddingLeft="64dp"
                    android:paddingRight="64dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="30dp" >
                </com.example.zf_pad.util.ScrollViewWithGView>

                <Button
                    android:id="@+id/apply_submit"
                    style="@style/ButtonNormal"
                    android:layout_width="240dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="30dp"
                    android:enabled="false"
                    android:text="@string/button_submit" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>