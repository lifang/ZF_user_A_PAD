<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:fillViewport="true"
    >
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/order_image"
        android:paddingRight="@dimen/order_image"
        android:paddingTop="@dimen/sy_bt_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="客服热线"
                android:textColor="#6c6c6c"
                android:textSize="@dimen/textbig1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kfdh" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="400-880-9988"
                    android:textColor="#292929"
                    android:textSize="@dimen/textbig1" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#BAB9B9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:text="微信公众平台"
                    android:textColor="#6c6c6c"
                    android:textSize="@dimen/textbig1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/weichat" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="360dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"           
            android:paddingLeft="12dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" >

                        <EditText
                            android:id="@+id/login_edit_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/shape"
                            android:hint="您的称呼  先生/女士"
                            android:singleLine="true"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp" >
                        </EditText>

                        <LinearLayout
                            android:id="@+id/login_linear_deletename"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:visibility="gone" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_delete" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="fill_parent" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" >

                        <EditText
                            android:id="@+id/login_edit_name1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/shape"
                            android:singleLine="true"
                             android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:hint="您的联系方式" >
                        </EditText>

                        <LinearLayout
                            android:id="@+id/login_linear_deletename1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:visibility="gone" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_delete" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="303dp"
                android:layout_marginTop="16dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp" >

                    <EditText
                        android:id="@+id/et_contetn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/shape"
                        android:gravity="left|top"
                        android:hint="需要我们提供什么"
                        android:padding="6dp" >
                    </EditText>

                    <TextView
                        android:id="@+id/maxCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/et_contetn"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="#898989"
                        android:text="最多填写200个汉字" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" >

                <Button
                    android:id="@+id/btn_exit"
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#FD6A00"
                    android:text="提交"
                    android:textSize="18dp"
                    android:textColor="@color/ffffff" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>