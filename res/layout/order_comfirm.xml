<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFBFB"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/titilepad1"
                        android:paddingRight="@dimen/titilepad1" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:layout_marginTop="32dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="选择地址"
                                android:textColor="#292929"
                                android:textSize="@dimen/textbig" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/normai_height"
                            android:background="#E9E8E8" >

                            <LinearLayout
                                android:id="@+id/ll_isshow"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="7dp"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <CheckBox
                                    style="@style/MyCheckBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="7dp"
                                    android:checked="true"
                                     android:visibility="invisible"
                                    android:clickable="false"
                                    android:focusable="false" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="{默认}"
                                    android:visibility="invisible"
                                    android:textColor="@color/bgtitle"
                                    android:textSize="@dimen/textmid" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="0dp"
                                   android:layout_marginLeft="22dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="收货人"
                                android:textColor="#292929"
                                android:textSize="@dimen/textmids" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="所在地区"
                                android:textColor="#292929"
                                android:textSize="@dimen/textmids" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="详细地址"
                                android:textColor="#292929"
                                android:textSize="@dimen/textmids" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="邮编"
                                android:textColor="#292929"
                                android:textSize="@dimen/textmids" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="电话"
                                android:textColor="#292929"
                                android:textSize="@dimen/textmids" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <com.example.zf_pad.util.ScrollViewWithListView
                                android:id="@+id/pos_lv1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="18dp"
                                android:divider="@null" >
                            </com.example.zf_pad.util.ScrollViewWithListView>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <Button
                                android:id="@+id/bt_mange"
                                android:layout_width="@dimen/normai_button_width"
                                android:layout_height="@dimen/normai_button_height"
                                android:layout_alignParentRight="true"
                                android:background="#FF6624"
                                android:text="地址管理"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/textmid"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/bt_add"
                                android:layout_width="@dimen/normai_button_width"
                                android:layout_height="@dimen/normai_button_height"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="20dp"
                                android:layout_toLeftOf="@+id/bt_mange"
                                android:background="#FF6624"
                                android:text="新增地址"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/textmid" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#E5E3E3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/titilepad1"
                    android:paddingRight="@dimen/titilepad1" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:text="商品信息"
                        android:textColor="#292929"
                        android:textSize="@dimen/textbig" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/normai_height"
                        android:background="#E9E8E8" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="商品"
                            android:textColor="#292929"
                            android:textSize="@dimen/textmids" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="单价"
                            android:textColor="#292929"
                            android:textSize="@dimen/textmids" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                             android:gravity="right|center_vertical"
                            android:paddingRight="@dimen/titilepad"
                            android:text="购买数量"
                           
                            android:textColor="#292929"
                            android:textSize="@dimen/textmids" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <com.example.zf_pad.util.ScrollViewWithListView
                            android:id="@+id/shopcar_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:divider="@null" >
                        </com.example.zf_pad.util.ScrollViewWithListView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/normai_height1"
                        android:background="#E9E8E8"
                        android:paddingRight="20dp" >

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="共计"
                            android:textColor="#292929"
                            android:textSize="@dimen/textmids" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="配送费: ￥0.00"
                            android:textColor="#292929"
                            android:textSize="@dimen/textmids" />

                        <TextView
                            android:id="@+id/tv_hj"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.5"
                            android:gravity="center|right"
                            android:text="合计"
                            android:textColor="#292929"
                            android:textSize="@dimen/textmids" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="留    言"
                            android:textSize="@dimen/textbig" />

                        <EditText
                            android:id="@+id/ed_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_edittext" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="42dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/item_cb"
                            style="@style/MyCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:checked="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="我要发票"
                            android:textColor="@color/text292929"
                            android:textSize="@dimen/textbig" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_isshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="80dp"
                        android:layout_marginTop="34dp"
                        android:visibility="gone"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="8dp"
                            android:text="发票类型"
                            android:textColor="#292929"
                            android:textSize="@dimen/textbig" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="60dp"
                            android:background="@drawable/ed_adress" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="8dp"
                            android:text="发票抬头"
                            android:textColor="#292929"
                            android:textSize="@dimen/textbig" />

                        <EditText
                            android:id="@+id/et_titel"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_edittext" >
                        </EditText>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="34dp"
                        android:background="#EEEDED" />
                </LinearLayout>
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="74dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/titilepad1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_totle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="实付：￥29999"
                        android:textColor="@color/text292929"
                        android:textSize="@dimen/textbig" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="（ 含配送费：￥0.00）"
                        android:textColor="@color/text292929"
                        android:textSize="@dimen/textmid" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_pay"
                    android:layout_width="@dimen/normai_button_width"
                    android:layout_height="@dimen/normai_button_height"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/normal_button_selector"
                    android:text="结算"
                    android:textColor="@color/ffffff" />
            </LinearLayout>
        </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>