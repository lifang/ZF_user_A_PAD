<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:background="#f8f8f8"
  	 >

 <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="@dimen/titilepad"
        android:paddingRight="@dimen/titilepad">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginTop="@dimen/normal_height1"
                android:text="最短租赁时间"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="3dp"
                android:background="@color/Viewc2" />
	   <TextView
	         android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
        		android:layout_marginTop="@dimen/zc_margin_top2"
                android:text="30天"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" />
 
        <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginTop="@dimen/normal_height1"
                android:text="最长租赁时间"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig"  />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="3dp"
                android:background="@color/Viewc2" />
	   <TextView
	         android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
        		android:layout_marginTop="@dimen/zc_margin_top2"
                android:text="365天"
                android:textColor="@color/text292929"
                 android:textSize="@dimen/textbig" />
	           <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginTop="@dimen/normal_height1"
                android:text="每月租金"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="3dp"
                android:background="@color/Viewc2" />
	   <TextView
	         android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
        		android:layout_marginTop="@dimen/zc_margin_top2"
                android:text="￥9999"
                android:textColor="@color/text292929"
                 android:textSize="@dimen/textbig" />
	           <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginTop="@dimen/normal_height1"
                android:text="说明"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig"  />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="3dp"
                android:background="@color/Viewc2" />
	   <TextView
	         android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
        		android:layout_marginTop="@dimen/zc_margin_top2"
                android:text="这里是租赁说明"
                android:textColor="@color/text292929"
                 android:textSize="@dimen/textbig" />
	           <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginTop="@dimen/normal_height1"
                android:text="对个人开通"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="3dp"
                android:background="@color/Viewc2" />
	   <TextView
	         android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
        		android:layout_marginTop="@dimen/zc_margin_top2"
                android:text="这里是租赁协议"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig"  />
             

          
        </LinearLayout>
    </ScrollView>

</LinearLayout>
