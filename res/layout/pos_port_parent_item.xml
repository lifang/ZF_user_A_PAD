<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >
            
        <TextView
            android:id="@+id/title"
            android:layout_width="190dp"
            android:layout_height="68dp"
            android:gravity="right|center_vertical"
            android:text="POS品牌"
            
            android:textColor="@color/text292929" />

        <CheckBox
            android:id="@+id/item_cb_all"
            style="@style/MyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="全部"
            android:textColor="@color/text6c6c6c6"
            android:textSize="15sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >
           <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <CheckBox
                android:id="@+id/item_cb1"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="34dp"
                android:text="全部"
                android:textColor="@color/text6c6c6c6"
                android:textSize="15sp" />
        </LinearLayout>

           <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <CheckBox
                android:id="@+id/item_cb2"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="34dp"
                android:text="全部"
                android:textColor="@color/text6c6c6c6"
                android:textSize="15sp" />
        </LinearLayout>

           <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <CheckBox
                android:id="@+id/item_cb3"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="34dp"
                android:text="全部"
                android:textColor="@color/text6c6c6c6"
                android:textSize="15sp" />
        </LinearLayout>

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <CheckBox
                android:id="@+id/item_cb4"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="34dp"
                android:text="全部"
                android:textColor="@color/text6c6c6c6"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
<RelativeLayout 
    android:layout_width="220dp"
    android:layout_height="wrap_content"
      
    >
        
        <TextView
            android:id="@+id/tv1"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
          
            android:gravity="left|center_vertical"
            android:text="更多"
            android:textColor="@color/bgtitle" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
