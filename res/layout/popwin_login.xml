<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="100dp" >

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/lgclose"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登陆"
                android:textColor="#292929"
                android:textSize="23sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#484849" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:background="#FFFFFF"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:src="@drawable/minedl" />

            <EditText
                android:id="@+id/login_edit_name" 
                android:layout_width="228dp"
                android:layout_height="42dp"
                android:background="@drawable/shape"
                android:hint="请输入手机号/邮箱"
                android:paddingLeft="16dp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="26dp"
            android:background="@drawable/bg_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:src="@drawable/pass" />

            <EditText
                android:id="@+id/login_edit_pass" 
                android:layout_width="228dp"
                android:layout_height="42dp"
                android:background="@drawable/shape"
                android:hint="请输入密码"
                android:paddingLeft="16dp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:background="#FF6624"
                android:text="登陆"
                android:textColor="#ffffff"
                android:textSize="@dimen/textbig" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:layout_marginBottom="22dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF6724"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"
                    android:text="找回密码" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF6724"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:text="注册" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>