<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/ffffff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/item_cb"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:checked="false" />

            <ImageView
                android:id="@+id/evevt_img"
                android:layout_width="@dimen/order_image"
                android:layout_height="@dimen/order_image"
                android:layout_marginLeft="14dp"
                android:background="@drawable/testphone401" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="14dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textsmall" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/retail_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="￥ 1999"
                        android:textColor="#292929"
                        android:textSize="@dimen/textsmall" />

                    <TextView
                        android:id="@+id/showCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/retail_price"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:text="X2"
                        android:textColor="#292929"
                        android:textSize="@dimen/textsmall" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/zftd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/wayName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="支付通道"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="@dimen/textsmall" />

                    <TextView
                        android:id="@+id/wayNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="支付宝"
                        android:textColor="@color/text292929"
                        android:textSize="@dimen/textsmall" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/zf_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/Model_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="品牌型号"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="@dimen/textsmall" />

                    <TextView
                        android:id="@+id/Model_numberTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="泰山TS9000"
                        android:textColor="@color/text292929"
                        android:textSize="@dimen/textsmall" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:paddingBottom="2dp" >

            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/tv_bg"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reduce"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0.05dp"
                    android:layout_height="match_parent"
                    android:background="#ff878787" />

                <EditText
                    android:id="@+id/buyCountEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="1234567890"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:minWidth="60dp"
                    android:text="1"
                    android:textSize="@dimen/textmids" />

                <View
                    android:layout_width="0.05dp"
                    android:layout_height="match_parent"
                    android:background="#ff878787" />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/black" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/normal_width5"
            android:gravity="center_vertical"
            android:text="删除"
            android:textColor="#FC6907"
            android:textSize="@dimen/textmids" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

</LinearLayout>