<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/ffffff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/order_image"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/item_cb"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:checked="false" />

            <ImageView
                android:id="@+id/evevt_img"
                android:layout_width="@dimen/order_image"
                android:layout_height="@dimen/order_image"
                android:layout_marginLeft="14dp"
                android:background="@drawable/testphone401" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="14dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="泰山TS900"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textmid" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3" >

                    <TextView
                        android:id="@+id/retail_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="￥ 1999"
                        android:textColor="#292929"
                        android:textSize="21sp" />

                    <LinearLayout
                        android:id="@+id/zftd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/wayName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:text="支付通道"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="@dimen/textmid" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:text="支付宝"
                            android:textColor="@color/text292929"
                            android:textSize="@dimen/textmid" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zf_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/zftd"
                        android:gravity="bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/Model_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:text="品牌型号"
                            android:textColor="@color/text6c6c6c6"
                            android:textSize="@dimen/textmid" />

                        <TextView
                            android:id="@+id/content2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:ellipsize="end"
                            android:gravity="bottom"
                            android:maxLines="1"
                            android:text="泰山TS9000"
                            android:textColor="@color/text292929"
                            android:textSize="@dimen/textmid" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/showCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/retail_price"
                        android:layout_centerHorizontal="true"
                        android:text="X2"
                        android:textColor="#292929"
                        android:textSize="@dimen/textbig" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/order_image"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:paddingBottom="2dp" >

            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/reduce"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/jian" />

                <EditText
                    android:id="@+id/buyCountEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/ffffff"
                    android:gravity="center"
                    android:text="1" />

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/jia" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/normal_width5"
            android:gravity="center_vertical"
            android:textColor="#FC6907"
            android:textSize="@dimen/textmid"
            android:text="删除" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

</LinearLayout>