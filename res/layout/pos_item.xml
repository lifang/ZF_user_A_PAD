<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/itemheight"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/evevt_img"
            android:layout_width="@dimen/postimg"
            android:layout_height="@dimen/postimg"
            android:layout_marginLeft="12dp"
            android:background="@drawable/testphone401" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" 
                android:maxLines="2"
                android:textStyle="bold"
                android:text="2015最新POS机器旗舰版  1.0" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/test_zl" />
                	<LinearLayout
			        android:layout_width="fill_parent"
                android:layout_height="wrap_content"
             	android:orientation="horizontal"
               	android:layout_marginTop="5dp"
               
			    >

                		<TextView
                		    android:id="@+id/tv_price"
                		    android:layout_width="fill_parent"
                		    android:layout_height="wrap_content"
                		 
                		    android:maxLines="1"
                		    android:layout_weight="1"
                		    android:gravity="center"
                		    android:text="$999.00"
                		    android:textColor="@color/text292929"
                		    android:textSize="@dimen/textbig"  />

                   <View android:layout_height="1dp"
                       android:layout_weight="1"
                       android:layout_width="0dp"/>
                <TextView
                
                android:layout_width="160dp"
                android:layout_height="wrap_content"
               	android:id="@+id/ys"
 				android:textColor="@color/text292929"
              
                android:layout_gravity="center_vertical"
            
                android:text="已售99"
                android:textSize="@dimen/textbig" />
                  </LinearLayout>
            </LinearLayout>
			<LinearLayout
			        android:layout_width="wrap_content"
                android:layout_height="0dp"
             	android:orientation="vertical"
                android:layout_weight="1"
			    >
                	
			    
			    	<LinearLayout
			        android:layout_width="wrap_content"
                android:layout_height="0dp"
             	android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="bottom"
			    >
              
                                              <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             
 
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="bottom"
                android:text="品牌型号"
                android:textColor="@color/text6c6c6c6"
                android:textSize="@dimen/textbig"  />
			                  <TextView
                android:id="@+id/content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             	android:layout_marginLeft="7dp"
 				android:textColor="@color/text292929"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="bottom"
                android:text="contentcontentcontentcontent"
                android:textSize="@dimen/textbig" />
                	</LinearLayout>
			    
			    <LinearLayout
			        android:layout_width="wrap_content"
                android:layout_height="0dp"
             	android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="bottom"
			    >
                                              <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             
 
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="bottom"
                android:text="支付通道"
                android:textColor="@color/text6c6c6c6"
                android:textSize="@dimen/textmid"  />
			                  <TextView
                android:id="@+id/tv_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             	android:layout_marginLeft="7dp"
 				android:textColor="@color/text292929"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="bottom"
                android:text="支付宝"
                android:textSize="@dimen/textmid"  />
                	</LinearLayout>		    
			</LinearLayout>     
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="22dp"
        android:layout_height="1dp"
        android:background="#DADBDB" />

</LinearLayout>