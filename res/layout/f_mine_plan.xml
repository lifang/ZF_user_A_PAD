<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="申请进度查询"
        android:textColor="#686868"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_process"
            android:layout_width="302dp"
            android:layout_height="32dp"
            android:background="@drawable/tv_bg"
            android:hint="输入手机号"
            android:paddingLeft="5dp"
            android:textColor="@color/text292929"
            android:textColorHint="@color/text6c6c6c6" />

        <Button
            android:id="@+id/btn_serch"
            android:layout_width="79dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="#FF5A10"
            android:text="查询"
            android:textColor="#FFEBC5"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/apply_progress_tips"
        style="@style/TextItem"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:text="@string/apply_progress_no_data"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_result"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="110dp"
        android:background="@color/white"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>