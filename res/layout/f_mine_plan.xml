<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请进度查询"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#686868"
        android:layout_marginTop="60dp" />
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp" >
    <EditText 
        android:id="@+id/et_process"
        android:layout_width="302dp"
        android:layout_height="32dp"
        android:background="@drawable/tv_bg"
         />
    <Button
        android:id="@+id/btn_serch"
        android:layout_width="79dp"
        android:layout_height="30dp"
        android:text="查询"
        android:textSize="20sp"
        android:textColor="#FFEBC5"
        android:layout_marginLeft="8dp"
        android:background="#FF5A10"/>
    </LinearLayout>
   <TextView
		android:id="@+id/apply_progress_tips"
		style="@style/TextItem"
		android:layout_gravity="center"
		android:layout_marginTop="36dp"
		android:text="@string/apply_progress_no_data"
		android:visibility="gone"/>
    <ListView 
        android:id="@+id/lv_result"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="110dp"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:background="@color/white"></ListView>
</LinearLayout>
