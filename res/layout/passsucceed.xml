<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_back" >
    </include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/edheight"
            android:paddingLeft="@dimen/titilepad"
            android:paddingRight="@dimen/titilepad"
            android:paddingTop="@dimen/edheight" >

            <LinearLayout
                android:id="@+id/ll_tel"
               android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:text="恭喜您的"
                    android:visibility="gone"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textbig" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="您的密码已更新!"
                        android:textColor="@color/text292929"
                        android:textSize="@dimen/textbig" />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="13500001111"
                        android:visibility="gone"
                        android:textColor="@color/bgtitle"
                        android:textSize="@dimen/textbig" />
                </LinearLayout>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="已经注册成功"
                android:visibility="gone"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" />
            </LinearLayout>
  <LinearLayout
                android:id="@+id/ll_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
               android:visibility="gone"
              >
<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="重置密码邮件"
             
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" />
                

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="已发送至"
                        android:textColor="@color/text292929"
                        android:textSize="@dimen/textbig" />

                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="13500001111"
                        android:textColor="@color/bgtitle"
                        android:textSize="@dimen/textbig" />
                    
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="请注意查收"
                        android:textColor="@color/text292929"
                        android:textSize="@dimen/textbig" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/zc_margin_top1"
                android:background="#E5E4E4" />

            <LinearLayout
                android:id="@+id/login_linear_signin"
                android:layout_width="@dimen/zc_land_w"
                android:layout_height="@dimen/sp_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sp_height"
                android:background="@drawable/bg_blue_shape"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马上登录"
                    android:textColor="@color/fffefe"
                    android:textSize="@dimen/textmid" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>