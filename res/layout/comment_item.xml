<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zc_margin_top"
        android:layout_marginLeft="@dimen/zc_margin_top"
        android:layout_marginRight="@dimen/zc_margin_top"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/order_image"
        android:layout_marginBottom="@dimen/zc_margin_top2"
   	android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/evevt_img"
            android:layout_width="@dimen/order_image"
            android:layout_height="@dimen/order_image"
            android:layout_marginLeft="@dimen/normal_width3"
            android:background="@drawable/testphone401" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/sy_rl_margin"
            android:layout_marginRight="@dimen/normal_width3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content_pp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="泰山POS机旗舰版"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textmid" />

            

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:visibility="invisible"
                android:text="X   2"
                android:id="@+id/tv_x"
                android:textColor="@color/text292929"
                android:textSize="11sp" />
				<RelativeLayout android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2">
				    
				                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="品牌型号"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="@dimen/textmid" />

                <TextView
                    android:id="@+id/content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="泰山TS900"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textmid" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="支付通道"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="@dimen/textmid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="支付宝"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textmid" />
            </LinearLayout>
				    
				     
				</RelativeLayout>
 
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical"
	    
	    android:layout_alignParentRight="true">
	    <TextView android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="评分："
	        
	        android:textSize="@dimen/textmid"
	        android:textColor="@color/text292929"/>
	  <RatingBar
            android:id="@+id/si_rt_msxf"
            style="@style/star_rating_bar_style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/zc_margin_top"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
             
            android:numStars="5"
            android:rating="5"
            android:stepSize="1" />
	    
	</LinearLayout>
        </RelativeLayout>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/zc_margin_top"
        android:layout_marginBottom="@dimen/zc_margin_top"
        android:background="@color/ffffff" >

        <EditText
            android:id="@+id/item_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_left2"
            android:layout_marginRight="14dp"
            android:padding="@dimen/zc_margin_top2"
            android:gravity="top"
            android:singleLine="true"
            android:hint="请输入评价"
            android:background="@drawable/shape_edittext"
            android:textColor="@color/text292929"
            android:textSize="@dimen/textsmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/zc_margin_top2"
            android:text="最多填写200个汉字"
            android:layout_marginRight="@dimen/zc_margin_top1"
            android:textColor="@color/text292929"
            android:textSize="@dimen/textsmall" />
    </RelativeLayout>
    </LinearLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#DEDDDC"/>
</LinearLayout>