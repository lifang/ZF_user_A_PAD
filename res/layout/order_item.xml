<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_height1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_ddbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="订单编号:123444444"
            android:textColor="@color/text6c6c6c6"
            android:textSize="@dimen/textsmall" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zc_margin_top2"
            android:layout_weight="1"
            android:gravity="left"
            android:text="2015-1-1 12:00：00"
            android:textColor="@color/text6c6c6c6"
            android:textSize="@dimen/textsmall" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:text="已经发货"
            android:textColor="#292929"
            android:textSize="@dimen/textmid" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ddheight1"
        android:layout_marginBottom="@dimen/zc_margin_top"
        android:layout_marginTop="@dimen/zc_margin_top"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/evevt_img"
            android:layout_width="@dimen/order_image"
            android:layout_height="@dimen/order_image"
            android:layout_marginLeft="14dp"
            android:background="@drawable/testphone401" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >
<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/sy_rl_margin"
            android:layout_marginRight="@dimen/normal_width3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content_pp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="品牌型号"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textmid" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="品牌型号"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="@dimen/textmid" />

                <TextView
                    android:id="@+id/content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zc_margin"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="contentcontentcontentcontent"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textmid" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="支付通道"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="@dimen/textmid" />

                <TextView
                    android:id="@+id/tv_gtd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zc_margin"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="支付宝"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textmid" />
            </LinearLayout>
        </LinearLayout>
<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="$ 1999"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textbig" />

                <TextView
                    android:id="@+id/tv_isshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="(押金)"
                    android:textColor="@color/text292929"
                    android:textSize="@dimen/textsmall"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_goodnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_height1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="X   2"
                android:textColor="@color/text292929"
                android:textSize="@dimen/textbig" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:gravity="right"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_ishow"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                
                
           
                android:orientation="vertical" >
<Button
                    android:id="@+id/btn_pay"
                    android:layout_width="@dimen/normai_button_width"
                    android:layout_height="@dimen/normai_button_height"
                    android:background="@drawable/bg_blue_shape"
                    android:text="付款"
                    android:textSize="@dimen/textmid"
                    android:textColor="@color/ffffff" />
                <Button
                    android:layout_width="@dimen/normai_button_height"
                    android:layout_height="@dimen/textmid"
                    android:background="@color/ffffff" />

                
                <Button
                    android:layout_width="@dimen/normai_button_width"
                    android:layout_height="@dimen/normai_button_height"
                    android:background="@drawable/shape_o"
                    android:text="取消订单"
                    android:id="@+id/btn_cancle"
                    android:textSize="@dimen/textmid"
                    android:textColor="@color/bgtitle" />
            </LinearLayout>

            <Button
                android:layout_width="@dimen/normai_button_width"
                android:layout_height="@dimen/normai_button_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/bg_blue_shape"
                android:text="评价"
                android:visibility="gone"
                android:textColor="@color/ffffff" />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/normal_height1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="共计:   10件"
            android:textColor="@color/text6c6c6c6"
            android:textSize="@dimen/textsmall" />

        <TextView
            android:id="@+id/tv_psf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zc_margin_top2"
            android:layout_weight="1"
            android:text="配送费：￥1000"
            android:textColor="@color/text6c6c6c6"
            android:textSize="@dimen/textsmall" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:text="实付：29999"
            android:textColor="#292929"
            android:textSize="@dimen/textmids" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#A9A8A8" />

</LinearLayout>