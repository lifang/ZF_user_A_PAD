<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp" >

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="原密码"
                   android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textColor="@color/text292929"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_oldpaw"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tv_bg"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/text6c6c6c6" />
        </TableRow>

        <TableRow android:layout_marginTop="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="新密码"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textColor="@color/text292929"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_newpaw"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tv_bg"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/text6c6c6c6" />
        </TableRow>

        <TableRow android:layout_marginTop="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textColor="@color/text292929"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_confirmpaw"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tv_bg"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/text6c6c6c6" />
        </TableRow>

        <TableRow android:layout_marginTop="40dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btn_save_chgpaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="#FF5A10"
                android:gravity="center"
                android:text="保      存"
                android:textColor="#FFE9C1"
                android:textSize="22sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>