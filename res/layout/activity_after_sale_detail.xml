<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/titilepad"
        android:paddingRight="@dimen/titilepad"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/normal_width2"
                android:paddingRight="@dimen/normal_width2" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:paddingBottom="17dp"
                    android:paddingTop="22dp" >

                    <TextView
                        android:id="@+id/after_sale_detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text535252"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/after_sale_apply_time"
                            android:textColor="@color/text535252"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/after_sale_detail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/text535252"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/after_sale_detail_button_1"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/blank_button_selector"
                        android:textColor="@color/blank_button_selector"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/after_sale_detail_button_2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:background="@drawable/blank_button_selector"
                        android:textColor="@color/blank_button_selector"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/Divider" />

            <LinearLayout
                android:id="@+id/after_sale_detail_category_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_width2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_width2"
                android:orientation="vertical"
                android:paddingLeft="@dimen/normal_width2"
                android:paddingRight="@dimen/normal_width2"
                android:visibility="gone" >

                <TextView
                    style="@style/TextTrace.Comment"
                    android:text="@string/after_sale_trace_record" />

                <LinearLayout
                    android:id="@+id/after_sale_comment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e5e4e4"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/zc_margin_top" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>