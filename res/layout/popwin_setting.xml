<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="100dp" >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/close"
   				android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/lgclose"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:textColor="#292929"
                android:text="设置" />

        </RelativeLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#484849" />
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_gravity="center_vertical"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="接受新通知"
            android:textColor="@color/text292929"
            android:textSize="21sp" />

             <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"
      
          />
    
 
        <ImageView
            android:id="@+id/img_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
           	android:background="@drawable/pos_on"
            android:layout_marginRight="7dp"
              />
    </LinearLayout>
  <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
     
        android:background="@color/Viewc" />
     <LinearLayout
        android:id="@+id/ll_new"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_gravity="center_vertical"
       android:background="@drawable/bg_item" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="检测新版本"
            android:textColor="@color/text292929"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="8"
            android:singleLine="true"
            android:text="v 1.0.1"
            android:textColor="@color/text6c6c6c6"
            android:textSize="21sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
         	android:visibility="invisible"
            android:layout_marginRight="7dp"
            android:src="@drawable/post_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Viewc" />
   <LinearLayout
	    android:id="@+id/ll_clean"
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_gravity="center_vertical"
       android:background="@drawable/bg_item" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="清除缓存"
            android:textColor="@color/text292929"
            android:textSize="21sp" />

        <TextView
                android:id="@+id/tv_clean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="8"
            android:singleLine="true"
            android:text="200M"
            android:textColor="@color/text6c6c6c6"
            android:textSize="21sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_marginRight="7dp"
            android:src="@drawable/post_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Viewc" />
    </LinearLayout>

</LinearLayout>