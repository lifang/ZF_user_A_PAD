<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F8F8F8"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="64dp"
        android:paddingRight="64dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginTop="30dp"
                android:text="对个人开通"
                android:textColor="@color/text6c6c6c6"
                android:textSize="18sp" />

       <View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="3dp"
     android:background="@color/bgtitle"/>

            <com.example.zf_pad.util.ScrollViewWithListView
                android:id="@+id/pos_lv1"
                android:layout_width="fill_parent"
                android:background="#F8F8F8"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="10dp"
                android:divider="@null" >
            </com.example.zf_pad.util.ScrollViewWithListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginTop="30dp"
                android:text="对公开通"
                android:textColor="@color/text6c6c6c6"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"

                android:layout_marginTop="3dp"
                android:background="@color/bgtitle"/>

            <com.example.zf_pad.util.ScrollViewWithListView
                android:id="@+id/pos_lv2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="10dp"
                android:background="#F8F8F8"
                android:divider="@null" >
            </com.example.zf_pad.util.ScrollViewWithListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>